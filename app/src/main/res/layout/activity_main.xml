<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="daehwankim.com.con_c_server.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="IP" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/textView"
        android:layout_below="@+id/textView"
        android:gravity="center"
        android:text="Port" />

    <EditText
        android:id="@+id/EditText_ServerPort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_below="@+id/textView"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:layout_toEndOf="@+id/textView" />

    <EditText
        android:id="@+id/EditText_ServerIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/EditText_Message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/Button_SendMessage"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Hello, Server !" />

    <Button
        android:id="@+id/Button_SendMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:text="Send" />

    <TextView
        android:id="@+id/TextView_getText"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/EditText_Message"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:gravity="center" />

    <Button
        android:id="@+id/Button_Connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextView_getText"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/Button_SendMessage"
        android:text="Connect"
        android:textSize="10sp" />
</RelativeLayout>
